<!DOCTYPE test SYSTEM "dom3.dtd" [
  <!ENTITY % entities SYSTEM "dom3tests.ent">
  %entities;
]>


<test xmlns="&level3;" name="DOMInputSourceTest5">
  <metadata>
    <title>DOMInputSourceTest5</title>
    &creator; 
    <description>Tests behaviour of the baseURI of DOMInput</description> 
    &contributor; &date;
	<subject resource="http://www.w3.org/TR/2003/CR-DOM-Level-3-LS-20031107/load-save#LS-LSInput-systemId"/>
	<subject resource="http://www.w3.org/TR/2003/CR-DOM-Level-3-LS-20031107/load-save#LS-LSInput-publicId"/>
	<subject resource="http://www.w3.org/TR/2003/CR-DOM-Level-3-LS-20031107/load-save#LS-LSInput-baseURI"/>
	<subject resource="http://www.w3.org/TR/2003/CR-DOM-Level-3-LS-20031107/load-save#LS-LSResourceResolver-resolveResource"/>
  </metadata>


  <var name="myentityresolver" type="LSResourceResolver"> 
     <var name="erInputSource" type="LSInput"/>
     <resolveResource>
		<var name="nullInput" type="LSInput" isNull="true"/>
        <assertEquals actual="publicId"  expected='"new_public"' ignoreCase="false" id="er_public"/>
        <assertEquals actual="systemId"  expected='"new_system"' ignoreCase="false" id="er_system"/>
        <assertEquals actual="baseURI" expected='"new_base"'   ignoreCase="false" id="er_base"/>
        

        <return value="nullInput"/>            
     </resolveResource>

  </var>

  <var name="configuration" type="DOMConfiguration"/>

  &vars;
  &init;

  <config var="configuration" obj="builder" interface="LSParser"/> 

  <setParameter obj="configuration" name='"resource-resolver"' value="myentityresolver"/>
 
  <systemId obj="inputSource" value='"new_system"' interface="LSInput"/>
  <publicId obj="inputSource" value='"new_public"' interface="LSInput"/>
  <baseURI  obj="inputSource" value='"new_base"' interface="LSInput"/>
 
  <parse var="document" obj="builder" input="inputSource"/>
  <assertNull actual="document" id="nullDocument"/>


</test>





