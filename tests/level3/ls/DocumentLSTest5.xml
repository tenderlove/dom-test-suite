<!DOCTYPE test SYSTEM "dom3.dtd" [
  <!ENTITY % entities SYSTEM "dom3tests.ent">
  %entities;
]>


<test xmlns="&level3;" name="DocumentLSTest5">
  <metadata>
    <title>DocumentLS</title>
    &creator; 
    <description>tests DocumentLS using saveXML which is called with a node from a wrong document. Should give a wrong_document_err</description> 
    &contributor; &date;
    <subject resource="&spec;#LS-Interfaces-DocumentLS"/>
  </metadata>

  <var name="documentls"   type="DocumentLS"/>
  <var name="stringResult" type="DOMString"/>
  <var name="document0"    type="Document"/>
  <var name="document1"    type="Document"/>

  &vars;
  &init;


  <!-- first a normal parse-->
  <parseURI  var="document0" obj="builder" uri="TEST0"/>
  <parseURI  var="document1" obj="builder" uri="TEST1"/>

  <assign var="documentls" value="document0"/>

  <assertDOMException id="wrong_document_on_savexml">
   <WRONG_DOCUMENT_ERR>
     <saveXML var="stringResult" obj="documentls" node="document1" interface="DocumentLS"/>
   </WRONG_DOCUMENT_ERR>
  </assertDOMException>

</test>





