<test xmlns="&level3;" name="DOMInputSourceTest0">
  <metadata>
    <title>DOMInputSource</title>
    &creator; 
    <description>test the builder by using a characterstream inputsource</description> 
    &contributor; &date;
    <subject resource="&spec;#LS-Interfaces-DOMInputSource"/>
  </metadata>
  &vars;

  <!-- todo create reader -->
  <var name="myReader" type="DOMReader"/>
  <var name="elementList" type="NodeList"/>

  &init;

  
  <characterStream var="inputSource" obj="myReader"/> 

  <parse var="document" obj="builder" is="inputSource"/>
  <getElementsByTagName interface="Document" obj="document" tagname="&quot;elt0&quot;" var="elementList"/>
  <assertSize collection="elementList" size="1" id="count_elt0"/>

</test>





