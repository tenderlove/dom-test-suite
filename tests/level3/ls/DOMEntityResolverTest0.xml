<!DOCTYPE test SYSTEM "dom3.dtd" [
  <!ENTITY % entities SYSTEM "dom3tests.ent">
  %entities;
]>


<test xmlns="&level3;" name="DOMEntityResolverTest0">
  <metadata>
    <title>DOMEntityResolver</title>
    &creator; 
    <description>Simple entity resolver test, see whether all parameters are forwarded to the entity resolver</description> 
    &contributor; &date;
    <subject resource="&spec;#LS-Interfaces-DOMEntityResolver"/>
  </metadata>


  <var name="myentityresolver" type="DOMResourceResolver"> 
     <resolveResource>
     	<var name="nullInput" type="DOMInput" isNull="true"/>

        <assertEquals actual="publicId"  expected='"public"' ignoreCase="false" id="er_public"/>
        <assertEquals actual="systemId"  expected='"system"' ignoreCase="false" id="er_system"/>
        <assertEquals actual="baseURI" expected='"base"'   ignoreCase="false" id="er_base"/>
        

        <return value="nullInput"/>            
     </resolveResource>

  </var>

  <var name="ENTITY_RESOLVER" type="DOMString" value='"entity-resolver"'/>
  <var name="configuration" type="DOMConfiguration"/>

  &vars;
  &init;

  <config var="configuration" obj="builder" interface="DOMParser"/> 

  <setParameter obj="configuration" name="ENTITY_RESOLVER" value="myentityresolver"/>
  
  <parseURI var="document" obj="builder" uri="TEST6"/>


</test>





