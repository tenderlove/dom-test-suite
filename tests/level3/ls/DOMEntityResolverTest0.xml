<!DOCTYPE test SYSTEM "dom3.dtd" [
  <!ENTITY % entities SYSTEM "dom3tests.ent">
  %entities;
]>


<test xmlns="&level3;" name="DOMEntityResolverTest0">
  <metadata>
    <title>DOMEntityResolverTest01</title>
    &creator; 
    <description>Simple entity resolver test, see whether all parameters are forwarded to the entity resolver</description> 
    &contributor; &date;
    <subject resource="&spec;#LS-LSParser-parseURI"/>
    <subject resource="&spec;#LS-LSResourceResolver"/>
    <subject resource="http://www.w3.org/TR/2003/CR-DOM-Level-3-Core-20031107/core#DOMConfiguration-property"/>
  </metadata>

  <var name="resourceURI" type="DOMString"/>
  <var name="myentityresolver" type="LSResourceResolver"> 
     <resolveResource>
     	<var name="nullInput" type="LSInput" isNull="true"/>

        <assertEquals actual="publicId"  expected='"public"' ignoreCase="false" id="rr_publicId"/>
        <assertEquals actual="systemId"  expected='"system"' ignoreCase="false" id="rr_systemId"/>
        <assertURIEquals actual="baseURI" isAbsolute='true' name='"test6"' id="rr_baseURI"/>
        <return value="nullInput"/>            
     </resolveResource>

  </var>

  <var name="configuration" type="DOMConfiguration"/>

  &vars;
  &init;

  <config var="configuration" obj="builder" interface="LSParser"/> 
  <setParameter obj="configuration" name='"resource-resolver"' value="myentityresolver"/>
  
  <getResourceURI var="resourceURI" href="TEST6"/>
  <parseURI var="document" obj="builder" uri="resourceURI"/>


</test>





