<!DOCTYPE test SYSTEM "dom3.dtd" [
  <!ENTITY % entities SYSTEM "dom3tests.ent">
  %entities;
]>


<test xmlns="&level3;" name="DOMInputSourceTest3">
  <metadata>
    <title>DOMInputSourceTest3</title>
    &creator; 
    <description>test the builder by using a string inputsource overriding the encoding type, using characterStream however nothing should change</description> 
    &contributor; &date;
    <subject resource="http://www.w3.org/TR/2003/CR-DOM-Level-3-LS-20031107/load-save#LS-LSInput-encoding"/>
    <subject resource="http://www.w3.org/TR/2003/CR-DOM-Level-3-LS-20031107/load-save#LS-LSParser-parse"/>
  </metadata>
  <hasFeature feature='"Core"' version='"3.0"'/>

  <var name="elementList" type="NodeList"/>
  <var name="myString" type="DOMString" value="&quot;&lt;?xml version='1.0' encoding='UTF-8'?&gt;&lt;elt0&gt;elt0&lt;/elt0&gt;&quot;"/>
  <var name="encodingString" type="DOMString"/>
  <var name="iso"            type="DOMString" value="&quot;ISO-8859-1&quot;"/>
  <var name="utf"            type="DOMString" value="&quot;UTF-8&quot;"/>

  <var name="myReader" type="LSReader" value="myString"/>

  &vars;
  &init;

  <stringData obj="inputSource" value="myString" interface="LSInput"/> 
  <encoding   obj="inputSource" value="iso" interface="LSInput"/> 

  <parse var="document" obj="builder" input="inputSource"/>

  <!-- encoding should be changed for a DOMString inputsource -->
  <inputEncoding var="encodingString" obj="document" interface="Document"/> 
  <assertEquals actual="encodingString" expected="iso" ignoreCase="false" id="encodingstringcheck0"/>

  <!-- using a characterStream nothing should change-->
  <createLSInput  var="inputSource" obj="lsImplementation"/>
  <encoding   obj="inputSource" value="iso" interface="LSInput"/> 
  <characterStream obj="inputSource" var="myReader" interface="LSInput"/> 
  <parse var="document" obj="builder" input="inputSource"/>

  <!-- encoding should be changed for a DOMString inputsource -->
  <inputEncoding var="encodingString" obj="document" interface="Document"/> 
  <assertEquals actual="encodingString" expected="utf" ignoreCase="false" id="encodingstringcheck1"/>

</test>





